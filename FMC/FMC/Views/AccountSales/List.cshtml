
@{
    ViewBag.Title = "销售记录";
}

@section scripts{
    <script src="@Url.Content("~/Scripts/AccountSales/list.js")" type="text/javascript"></script>
}

<div>
    <table id="dg"></table>
</div>
<div id="tb" style="height:auto">
    <div>
        <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-reload',plain:true" onclick="initialDatagrid()">刷新</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true" onclick="addItem()">增加</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-remove',plain:true" onclick="removeItem()">删除</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true" onclick="getChanges()">编辑</a>
    </div>
    <div>
        起始日期<input id="startDate" type="text" class="easyui-datebox" style="width:100px;" required="required">
        截止日期<input id="endDate" type="text" class="easyui-datebox" style="width:100px;" required="required">
        <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-search',plain:true" onclick="accept()">查询</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-large-chart',plain:true" onclick="statistics()">统计分析</a>
    </div>
</div>

<div id="editDialog" style="width:300px;height:200px">
    <table>
        <tbody>
            <tr>
                <td>产品名称</td>
                <td><input id="productionName" class="easyui-combobox" style="width:150px;" required="required" /></td>
            </tr>
            <tr>
                <td>产品单位</td>
                <td><input id="productionUnit" class="easyui-textbox" style="width:150px;" data-options="readonly:true" /></td>
            </tr>
            <tr>
                <td>产品成本</td>
                <td><input id="productionCost" class="easyui-textbox" style="width:150px;" data-options="readonly:true" /></td>
            </tr>
            <tr>
                <td>产品利润</td>
                <td><input id="productionProfit" class="easyui-textbox" style="width:150px;" data-options="readonly:true" /></td>
            </tr>
            <tr>
                <td>销售数量</td>
                <td><input id="productionQuantity" class="easyui-numberspinner" style="width:150px;" required="required" /></td>
            </tr>
        </tbody>
    </table>
</div>

<div id="dd">
    ddd
</div>

