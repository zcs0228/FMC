
@{
    ViewBag.Title = "产品类型添加";
}

@section scripts{
    <script src="@Url.Content("~/Scripts/ProductionCategory/add.js")" type="text/javascript"></script>
}

<div>
    <table>
        <tr>
            <td>产品编号</td>
            <td><input id="code" class="easyui-textbox"/></td>
        </tr>
        <tr>
            <td>产品名称</td>
            <td><input id="name" class="easyui-textbox"/></td>
        </tr>
        <tr>
            <td>单位</td>
            <td><input id="unit" class="easyui-textbox"/></td>
        </tr>
        <tr>
            <td>成本</td>
            <td><input id="cost" class="easyui-numberbox" data-options="min:0,precision:2"/></td>
        </tr>
        <tr>
            <td>利润</td>
            <td><input id="profit" class="easyui-numberbox" data-options="min:0,precision:2"/></td>
        </tr>
        <tr>
            <td colspan="2">
            <a href="javascript:void(0)" class="easyui-linkbutton" onclick="addProduction()" data-options="iconCls:'icon-save'">保存</a>
            </td>
        </tr>
    </table>
</div>

